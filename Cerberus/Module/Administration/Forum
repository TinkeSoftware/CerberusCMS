$_Module_Forum_CREATE_TOPIC_TITLE						= $_POST['post_topic_title'];
$_Module_Forum_CREATE_TOPIC_TITLE						= str_replace("'", "&#39;", $_Module_Forum_CREATE_TOPIC_TITLE);
$_Module_Forum_CREATE_TOPIC_FORUM_ID					= $_POST['post_topic_forum_id'];
