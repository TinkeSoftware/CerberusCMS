if ($_READ_ADMINISTRATION_MODULE_DIRECTORY == "." || $_READ_ADMINISTRATION_MODULE_DIRECTORY == ".." || $_READ_ADMINISTRATION_MODULE_DIRECTORY == "index.php") {
/**
 * Do Nothing
**/
} else {

